{
	"name": "better-password",
	"version": "1.0.0",
	"author": "Marcel Losso",
	"description": "Custom password validation for better-auth",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"test": "vitest",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"tsc": "tsc --noEmit",
		"prepublishOnly": "pnpm run build"
	},
	"keywords": [
		"better-auth",
		"password",
		"validation",
		"authentication"
	],
	"license": "MIT",
	"homepage": "https://github.com/marcellosso/better-password",
	"packageManager": "pnpm@10.13.1",
	"peerDependencies": {
		"better-auth": "^1.3.4"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.2",
		"@changesets/cli": "^2.29.5",
		"@types/node": "^24.1.0",
		"tsup": "^8.5.0",
		"typescript": "^5.8.3",
		"vitest": "^3.2.4"
	}
}
